@model AWD1115Final.Models.Job

@{
    ViewData["Title"] = "Edit Job";
}

<h2>Edit Job</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="JobId" />

    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="SkillLevel"></label>
        <input asp-for="SkillLevel" type="number" min="1" max="5" class="form-control" />
        <span asp-validation-for="SkillLevel" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Priority"></label>
        <input asp-for="Priority" class="form-control" />
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="AssignedMechanic"></label>
        <input asp-for="AssignedMechanic" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="CompletionTime"></label>
        <input asp-for="CompletionTime" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-check mb-2">
        <input asp-for="IsCompleted" class="form-check-input" type="checkbox" />
        <label asp-for="IsCompleted" class="form-check-label"></label>
    </div>

    <div class="form-group mt-2">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}