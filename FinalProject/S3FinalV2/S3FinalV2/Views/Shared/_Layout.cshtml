@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager
@{
    var year = DateTime.Now.Year;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - MechTrack</title>
    <meta name="description" content="MechTrack is a mechanic scheduling app for assigning jobs and tracking hours.">
    <meta name="keywords" content="MechTrack, mechanic, scheduling, jobs, hours">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AWD1115Final.styles.css" asp-append-version="true" />
</head>
<body style="font-family:'Inter', sans-serif;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary mb-3">
            @{
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
            }

            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/MechTrackLogos/MechTrackLogoRFB.png" alt="MechTrack Logo" width="65" class="img-fluid me-2" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light @(currentAction == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-light @(currentAction == "About" ? "active" : "")" asp-controller="Home" asp-action="About">About</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-light @(currentAction == "Schedule" ? "active" : "")" asp-controller="Home" asp-action="Schedule">Schedule</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-light @(currentAction == "Reports" ? "active" : "")" asp-controller="Home" asp-action="Reports">Reports</a>
                    </li>
                    @if (User.IsInRole("Mechanic"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light @(currentController == "Jobs" ? "active" : "")"
                               asp-controller="Jobs" asp-action="Index">Job List</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light @(currentAction == "Create" ? "active" : "")"
                               asp-controller="Jobs" asp-action="Create">Add Job</a>
                        </li>
                    }
                    @if (User.IsInRole("Customer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light @(currentController == "Customer" ? "active" : "")"
                            asp-controller="Customer" asp-action="Index">My Orders</a>
                        </li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-light @(currentController == "Users" || currentController == "JobTemplates" ? "active" : "")"
                           data-bs-toggle="dropdown">Admin</a>

                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="JobTemplates" asp-action="Index">Job Templates</a>
                            </li>
                        </ul>
                    </li>
                    }
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="fixed-bottom bg-dark py-3">
        <div class="container">
            <p class="text-center mb-0 text-white">&copy; @year - MechTrack</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>