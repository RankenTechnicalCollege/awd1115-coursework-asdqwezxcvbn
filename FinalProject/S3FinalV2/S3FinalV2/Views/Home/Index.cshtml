@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="text-center">
        <h1 class="display-4 fw-bold">Welcome to MechTrack</h1>
        <p class="lead">A mechanic scheduling and job tracking app built to simplify shop management.</p>
        <hr />

        <!-- session-based visit counter -->
        @if (ViewBag.VisitCount != null)
        {
            <div class="alert alert-info">
                You have visited this site <strong>@ViewBag.VisitCount</strong> time(s) this session.
            </div>
        }

        <div class="container">
            <div class="row align-items-start">
                <div class="col-7">
                    <h2>What is MechTrack?</h2>
                    <p>
                        MechTrack is a locally run app that assigns jobs to mechanics based on their hours
                        and average task times. It solves the problem of paper slips and makes scheduling easier.
                    </p>
                </div>
                <div class="col-5">
                    <h3>Key Features</h3>
                    <div class="d-flex justify-content-center">
                        <ul class="list-unstyled features-list">
                            <li>✔  <span>Assign jobs automatically</span></li>
                            <li>✔  <span>Track weekly hours</span></li>
                            <li>✔  <span>Store jobs locally</span></li>
                            <li>✔  <span>Generate simple reports</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <img src="~/images/MechTrackLogos/MechTrackBanner.png" alt="MechTrackBanner" class="img-fluid rounded shadow mt-3" width="59%" />
    </div>
</div>