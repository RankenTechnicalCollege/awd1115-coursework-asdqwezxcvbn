@model S3FinalV2.Models.AssignedJobs

@{
    ViewData["Title"] = "Job Details";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Job Details</h2>

    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h5>Job Information</h5>
                    <p><strong>ID:</strong> @Model.AssignedJobId</p>
                    <p><strong>Job Name:</strong> @Model.Jobs?.Name</p>
                    <p><strong>Customer:</strong> @Model.Customer?.Name</p>
                    <p><strong>Priority:</strong> <span class="badge bg-warning">@Model.Priority</span></p>
                </div>
                <div class="col-md-6">
                    <h5>Time Information</h5>
                    <p><strong>Created Date:</strong> @Model.CreatedDate.ToString("g")</p>
                    <p><strong>Estimated Hours:</strong> @Model.EstimatedHours</p>
                    <p><strong>Actual Hours:</strong> @(Model.ActualHours?.ToString() ?? "Not set")</p>
                    <p><strong>Status:</strong> @(Model.IsCompleted ? "Completed" : "In Progress")</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <h5>Job Description</h5>
                    <p>@Model.Jobs?.Description</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <h5>Assigned Mechanics</h5>
                    @if (Model.MechanicAssignments != null && Model.MechanicAssignments.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Mechanic Name</th>
                                    <th>Assigned Hours</th>
                                    <th>Actual Hours</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ma in Model.MechanicAssignments)
                                {
                                    <tr>
                                        <td>@ma.Mechanic?.Name</td>
                                        <td>@ma.AssignedHours</td>
                                        <td>@ma.ActualHours</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No mechanics assigned yet.</p>
                    }
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Index" asp-controller="AssignedJobs" class="btn btn-secondary">Back</a>
                @if (!Model.IsCompleted)
                {
                    <a asp-action="UpdatePriority" asp-route-id="@Model.AssignedJobId" class="btn btn-warning">Update Priority</a>
                    <a asp-action="Complete" asp-route-id="@Model.AssignedJobId" class="btn btn-success">Complete Job</a>
                }
            </div>
        </div>
    </div>
</div>
