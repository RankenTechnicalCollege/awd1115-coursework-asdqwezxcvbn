@model IEnumerable<S3FinalV2.Models.AssignedJobs>
@{
    ViewData["Title"] = "Assigned Jobs";
    Layout = "_Layout";
}

<h2>Assigned Jobs</h2>

<form method="get" class="mb-3">
    <label>Filter by mechanic:</label>
    <select name="mechanicId" class="form-select w-auto d-inline-block">
        <option value="">All</option>
        @foreach (var m in (IEnumerable<S3FinalV2.Models.Mechanics>)ViewBag.Mechanics)
        {
            <option value="@m.MechanicId" selected="@(ViewBag.SelectedMechanicId == m.MechanicId)">
                @m.Name (@m.TotalHours hrs)
            </option>
        }
    </select>
    <button class="btn btn-primary ms-2" type="submit">Filter</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Job Type</th>
            <th>Customer</th>
            <th>Est Hours</th>
            <th>Actual</th>
            <th>Priority</th>
            <th>Assigned Mechanic(s)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.AssignedJobId</td>
                <td>@a.Jobs?.Name</td>
                <td>@a.Customer?.FullName</td>
                <td>@a.Jobs?.EstCompTime</td>
                <td>@a.ActualCompTime</td>
                <td>@a.Priority</td>

                <td>
                    @if (a.AssignedMechanics != null && a.AssignedMechanics.Any())
                    {
                        @foreach (var ma in a.AssignedMechanics)
                        {
                            <span class="badge bg-secondary">
                                @ma.Mechanic?.Name
                            </span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@a.AssignedJobId" class="btn btn-sm btn-info">Details</a>
                    <form method="post" asp-action="TakeJob" style="display:inline">
                        <input type="hidden" name="jobId" value="@a.AssignedJobId" />
                        <button type="submit" class="btn btn-sm btn-warning">Take Job</button>
                    </form>

                    @if (a.IsCompleted != true)
                    {
                        <form method="post" asp-action="CompleteJob" style="display:inline">
                            <input type="hidden" name="jobId" value="@a.AssignedJobId" />
                            <input type="number" step="0.25" name="actualHours" class="form-control d-inline-block w-auto" placeholder="hours" />
                            <button type="submit" class="btn btn-sm btn-success ms-1">Complete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p><a asp-action="Create" class="btn btn-primary">Create New Assigned Job</a></p>