@model IEnumerable<S3FinalV2.Models.AssignedJobs>

@{
    ViewData["Title"] = "Assigned Jobs";
    Layout = "_Layout";
}

<h2>Assigned Jobs</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Job</th>
            <th>Customer</th>
            <th>Skill Level</th>
            <th>Priority</th>
            <th>Assigned Mechanics</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.AssignedJobId</td>

                <td>
                    @a.Jobs?.Name
                </td>

                <td>
                    @a.Customer?.Name
                </td>

                <td>
                    @a.Jobs?.SkillLevel
                </td>

                <td>
                    @a.Jobs?.Priority
                </td>

                <td>
                    @if (a.MechanicAssignments != null && a.MechanicAssignments.Any())
                    {
                        foreach (var ma in a.MechanicAssignments)
                        {
                            <span class="badge bg-secondary me-1">
                                @ma.Mechanic?.Name
                            </span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </td>

                <td>
                    <a asp-action="Details"
                       asp-route-id="@a.AssignedJobId"
                       class="btn btn-sm btn-info">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-primary">
        Create New Assigned Job
    </a>
</p>
