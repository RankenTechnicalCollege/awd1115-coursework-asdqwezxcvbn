@model IEnumerable<S3FinalV2.Models.AssignedJobs>

@{
    ViewData["Title"] = "My Orders";
}

<h2>My Service Orders</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Job</th>
            <th>Vehicle</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Mechanic(s)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Jobs?.Name</td>

                <td>@o.Customer?.VehicleInfo</td>

                <td>@o.Jobs?.Priority</td>

                <td>
                    @if (o.MechanicAssignments != null && o.MechanicAssignments.Any())
                    {
                        <span class="badge bg-info">Assigned</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Pending</span>
                    }
                </td>

                <td>
                    @if (o.MechanicAssignments != null && o.MechanicAssignments.Any())
                    {
                        foreach (var ma in o.MechanicAssignments)
                        {
                            <span class="badge bg-secondary">
                                @ma.Mechanic?.Name
                            </span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Unassigned</span>
                    }
                </td>

                <td>
                    <a asp-action="Details"
                       asp-route-id="@o.AssignedJobId"
                       class="btn btn-primary btn-sm">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>