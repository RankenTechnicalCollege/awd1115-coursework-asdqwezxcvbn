@model IEnumerable<S3FinalV2.Models.Mechanics>

<h2>Mechanics</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Skill Level</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
                <td>@m.SkillLevel</td>
                <td>
                    <a asp-controller="AssignedJobs"
                       asp-action="Index"
                       asp-route-mechanicId="@m.MechanicId"
                       class="btn btn-primary">
                        View Jobs
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
