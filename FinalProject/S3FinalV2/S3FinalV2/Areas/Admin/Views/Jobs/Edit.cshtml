@model S3FinalV2.Models.Jobs

@{
    ViewData["Title"] = "Edit Job";
    Layout = "_Layout";
}

<h2>Edit Job</h2>

<form asp-area="Admin" asp-controller="Jobs" asp-action="Edit" method="post">
    <input type="hidden" asp-for="JobId" />

    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="SkillLevel"></label>
        <input asp-for="SkillLevel" type="number" min="1" max="5" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Priority"></label>
        <input asp-for="Priority" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-area="Admin" asp-controller="Jobs" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}