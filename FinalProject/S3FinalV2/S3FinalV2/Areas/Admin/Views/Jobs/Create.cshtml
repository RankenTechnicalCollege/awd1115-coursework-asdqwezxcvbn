@model S3FinalV2.Models.Jobs

@{
    ViewData["Title"] = "Add New Job";
    Layout = "_Layout";
}

<h2>Add New Job</h2>

<form asp-area="Admin" asp-controller="Jobs" asp-action="Create" method="post">

    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="SkillLevel"></label>
        <input asp-for="SkillLevel" type="number" min="1" max="4" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Priority"></label>
        <input asp-for="Priority" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Add Job</button>
    <a asp-area="Admin" asp-controller="Jobs" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>