@model S3FinalV2.Models.Jobs

@{
    ViewData["Title"] = "Add New Job";
    Layout = "_Layout";
}

<h2>Add New Job</h2>

<form asp-area="Admin" asp-controller="Jobs" asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label asp-for="Name">Job Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter job name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="SkillLevel">Skill Level</label>
        <input asp-for="SkillLevel" type="number" min="1" max="4" class="form-control" placeholder="1-5" />
        <span asp-validation-for="SkillLevel" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" placeholder="Enter job description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="EstCompTime">Estimated Completion Time (hours)</label>
        <input asp-for="EstCompTime" type="number" step="0.25" class="form-control" placeholder="0.0" />
        <span asp-validation-for="EstCompTime" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Priority">Priority</label>
        <input asp-for="Priority" class="form-control" placeholder="Low, Medium, High" />
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <input type="submit" value="Add Job" class="btn btn-success" />
        <a asp-area="Admin" asp-controller="Jobs" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}