@model S3FinalV2.Models.Jobs

@{
    ViewData["Title"] = "Delete Job";
    Layout = "_Layout";
}

<h2>Delete Job</h2>

<h4>Are you sure you want to delete this job?</h4>
<div class="card mb-3 p-3">
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Skill Level:</strong> @Model.SkillLevel</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Priority:</strong> @Model.Priority</p>
    <p><strong>Estimated Completion Time:</strong> @Model.EstCompTime hours</p>
    <p><strong>Average Completion Time:</strong> @Model.AvgCompletionTime hours</p>
</div>

<form asp-area="Admin" asp-controller="Jobs" asp-action="Delete" method="post">
    <input type="hidden" asp-for="JobId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-area="Admin" asp-controller="Jobs" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>