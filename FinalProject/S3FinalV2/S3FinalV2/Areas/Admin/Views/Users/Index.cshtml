@model IEnumerable<S3FinalV2.Areas.Admin.Controllers.UserRolesViewModel>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "_Layout";
}

<h2 class="mb-3">Manage Users</h2>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Current Roles</th>
            <th style="width: 35%">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            bool isCustomer = user.Roles.Contains("Customer");
            bool isMechanic = user.Roles.Contains("Mechanic");
            bool isAdmin = user.Roles.Contains("Admin");

            <tr>
                <td>@user.Email</td>
                <td>
                    @if (user.Roles.Any())
                    {
                        @foreach (var role in user.Roles)
                        {
                            <span class="badge bg-success me-1">@role</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted"><em>No roles assigned</em></span>
                    }
                </td>

                <td>
                    @if (!isMechanic)
                    {
                        <a asp-area="Admin"
                           asp-controller="Users"
                           asp-action="AddMechanic"
                           asp-route-id="@user.Id"
                           class="btn btn-sm btn-primary mb-1">
                            Make Mechanic
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-outline-primary mb-1" disabled>
                            Mechanic
                        </button>
                    }

                    @if (!isCustomer)
                    {
                        <a asp-area="Admin"
                           asp-controller="Users"
                           asp-action="AddCustomer"
                           asp-route-id="@user.Id"
                           class="btn btn-sm btn-secondary mb-1">
                            Make Customer
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-outline-secondary mb-1" disabled>
                            Customer
                        </button>
                    }

                    @if (!isAdmin)
                    {
                        <a asp-area="Admin"
                           asp-controller="Users"
                           asp-action="AddAdmin"
                           asp-route-id="@user.Id"
                           class="btn btn-sm btn-warning mb-1">
                            Make Admin
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-outline-warning mb-1" disabled>
                            Admin
                        </button>
                    }

                    @if (user.Roles.Any())
                    {
                        <a asp-area="Admin"
                           asp-controller="Users"
                           asp-action="RemoveRoles"
                           asp-route-id="@user.Id"
                           class="btn btn-sm btn-danger mb-1">
                            Remove Roles
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-outline-danger mb-1" disabled>
                            Remove Roles
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>