@model IEnumerable<S3FinalV2.Areas.Admin.Controllers.UserRolesViewModel>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "_Layout";
}

<h2>Manage Users</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Current Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @if (user.Roles.Any())
                    {
                        @string.Join(", ", user.Roles)
                    }
                    else
                    {
                        <em>No roles assigned</em>
                    }
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Users" asp-action="AddMechanic" asp-route-id="@user.Id" class="btn btn-sm btn-primary mb-1">Make Mechanic</a>
                    <a asp-area="Admin" asp-controller="Users" asp-action="AddCustomer" asp-route-id="@user.Id" class="btn btn-sm btn-secondary mb-1">Make Customer</a>
                    <a asp-area="Admin" asp-controller="Users" asp-action="AddAdmin" asp-route-id="@user.Id" class="btn btn-sm btn-warning mb-1">Make Admin</a>
                    <a asp-area="Admin" asp-controller="Users" asp-action="RemoveRoles" asp-route-id="@user.Id" class="btn btn-sm btn-danger mb-1">Remove Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>