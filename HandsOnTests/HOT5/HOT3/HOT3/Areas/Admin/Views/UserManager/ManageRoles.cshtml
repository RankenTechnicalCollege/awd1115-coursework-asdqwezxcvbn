@model HOT3.Areas.Admin.ViewModel.ManageRolesViewModel
@{
    ViewData["Title"] = "Manage Roles for " + Model.UserName;
    var userRoles = ViewBag.UserRoles as List<string> ?? new List<string>();
}

<h2>Manage Roles for @Model.UserName</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<form asp-action="AddToRole" method="post" class="mb-3">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <select name="role" class="form-select mb-2">
        @foreach (var role in Model.Roles)
        {
            if (!userRoles.Contains(role))
            {
                <option value="@role">@role</option>
            }
        }
    </select>
    <button class="btn btn-primary">Add Role</button>
</form>

<h4>Current Roles</h4>
<ul class="list-group mb-3">
    @foreach (var role in userRoles)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            @role
            <form asp-action="RemoveFromRole" method="post" class="d-inline">
                <input type="hidden" name="userId" value="@Model.UserId" />
                <input type="hidden" name="role" value="@role" />
                <button class="btn btn-sm btn-danger">Remove</button>
            </form>
        </li>
    }
</ul>

<a asp-action="Index" class="btn btn-secondary">Back to User List</a>
