@using Microsoft.AspNetCore.Identity
@inject UserManager<HOT3.Models.ApplicationUser> UserManager
@inject SignInManager<HOT3.Models.ApplicationUser> SignInManager

@{
    var user = SignInManager.IsSignedIn(User)
        ? await UserManager.GetUserAsync(User)
        : null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Admin - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        .active {
            font-weight: bold;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-dark mb-3">
        <div class="container-fluid">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="UserManager" asp-action="Index">Manage Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Back to Site</a>
                </li>
            </ul>

            <ul class="navbar-nav">
                @if (user != null)
                {
                    <li class="nav-item">
                        <span class="navbar-text text-light me-3">Hello @user.UserName</span>
                    </li>
                    <li class="nav-item">
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button type="submit" class="btn btn-link nav-link text-light">Logout</button>
                        </form>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>