@using Microsoft.AspNetCore.Routing
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - HOT3 Clothing Store</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        .active {
            font-weight: 700;
            text-decoration: underline;
        }

        .card-img-top {
            max-height: 300px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">HOT3 Clothing</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(IsActive("Home", "Index"))" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(IsActive("Cart", "Index"))" asp-controller="Cart" asp-action="Index">Cart</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">Admin</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @if (TempData["CartMessage"] != null)
        {
            <div class="alert alert-info">@TempData["CartMessage"]</div>
        }
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@functions {
    string IsActive(string controller, string action = null)
    {
        var routeData = Context.GetRouteData();
        var curController = routeData.Values["controller"]?.ToString();
        var curAction = routeData.Values["action"]?.ToString();
        if (!string.IsNullOrEmpty(action))
            return string.Equals(curController, controller, StringComparison.OrdinalIgnoreCase)
                && string.Equals(curAction, action, StringComparison.OrdinalIgnoreCase)
                ? "active" : "";
        return string.Equals(curController, controller, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    }
}