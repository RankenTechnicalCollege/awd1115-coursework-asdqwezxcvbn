@model IEnumerable<HOT3.Models.Product>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Products";
}
<h1>Products</h1>

<p>
    <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead><tr><th>Name</th><th>Category</th><th>Price</th><th>Stock</th><th></th></tr></thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Category</td>
                <td>@p.Price.ToString("C")</td>
                <td>@p.Stock</td>
                <td>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-slug="@p.Slug" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-slug="@p.Slug" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>