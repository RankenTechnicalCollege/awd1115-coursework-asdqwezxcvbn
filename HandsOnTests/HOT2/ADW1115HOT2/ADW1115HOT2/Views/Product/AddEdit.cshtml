@model ADW1115HOT2.Models.Product

<h2>@(Model.ProductID == 0 ? "Add Product" : "Edit Product")</h2>

<form asp-action="AddEdit" method="post">
    <div class="form-group mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProductDescShort" class="form-label"></label>
        <input asp-for="ProductDescShort" class="form-control" />
        <span asp-validation-for="ProductDescShort" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProductDescLong" class="form-label"></label>
        <textarea asp-for="ProductDescLong" class="form-control"></textarea>
        <span asp-validation-for="ProductDescLong" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProductImage" class="form-label"></label>
        <input asp-for="ProductImage" class="form-control" />
        <span asp-validation-for="ProductImage" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProductPrice" class="form-label"></label>
        <input asp-for="ProductPrice" class="form-control" />
        <span asp-validation-for="ProductPrice" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProductQty" class="form-label"></label>
        <input asp-for="ProductQty" class="form-control" />
        <span asp-validation-for="ProductQty" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CategoryID" class="form-label">Category</label>
        <select asp-for="CategoryID" asp-items="ViewBag.Categories" class="form-control">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
