@{
    Layout = null;
    var title = ViewData["Title"] ?? "Admin Panel";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/Areas/Admin/wwwroot/css/site-admin.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <div class="admin-wrapper d-flex">
        <nav class="sidebar bg-dark text-white p-3">
            <h4 class="mb-4 text-center">Admin Panel</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Appointments" asp-action="Index">
                        <i class="fa-solid fa-calendar"></i> Appointments
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Customers" asp-action="Index">
                        <i class="fa-solid fa-user"></i> Customers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i> Return Home
                    </a>
                </li>
            </ul>
        </nav>

        <div class="main-content flex-grow-1">
            <header class="navbar navbar-dark bg-dark shadow-sm">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h1">@title</span>
                </div>
            </header>

            <main class="container-fluid py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>