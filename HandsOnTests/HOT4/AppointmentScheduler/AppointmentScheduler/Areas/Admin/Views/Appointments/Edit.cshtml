@model AppointmentScheduler.Models.Appointment
@{
    ViewData["Title"] = "Edit Appointment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1>Edit Appointment</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="CustomerId" class="form-label"></label>
        <select asp-for="CustomerId" class="form-select" asp-items="@((SelectList)ViewData["CustomerId"])"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartDateTime" class="form-label"></label>
        <input asp-for="StartDateTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="StartDateTime" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" href="/Admin/Appointments">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}