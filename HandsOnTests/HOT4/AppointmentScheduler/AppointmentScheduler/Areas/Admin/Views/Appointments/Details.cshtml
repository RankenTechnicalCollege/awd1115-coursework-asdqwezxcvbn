@model AppointmentScheduler.Models.Appointment
@{
    ViewData["Title"] = "Appointment Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1>Appointment Details</h1>

<dl class="row">
    <dt class="col-sm-2">Start</dt>
    <dd class="col-sm-10">@Model.StartDateTime.ToString("g")</dd>

    <dt class="col-sm-2">End</dt>
    <dd class="col-sm-10">@Model.EndDateTime.ToString("g")</dd>

    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@Model.Customer?.Username</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Customer?.Phone</dd>
</dl>

<p><a class="btn btn-secondary" href="/Admin/Appointments">Back to List</a></p>