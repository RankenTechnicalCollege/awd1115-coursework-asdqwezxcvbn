@{
    ViewData["Title"] = "OrderForm";
}

@model HOT1_AWD1115.Models.OrderForm

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mb-4">Order T-Shirts</h1>

            <form asp-action="OrderForm" method="post" class="d-flex flex-column gap-3">

                <div class="form-floating">
                    <input asp-for="Quantity" type="number" class="form-control" id="floatingQuantity" />
                    <label asp-for="Quantity">Quantity</label>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="DiscountCode" class="form-control" id="floatingDiscount" />
                    <label asp-for="DiscountCode">Discount Code (optional)</label>
                </div>

                <button type="submit" class="btn btn-primary">Submit Order</button>
            </form>

            @if (Model != null && Model.Quantity > 0)
            {
                <div class="mt-4 p-3 border rounded shadow-sm bg-light">
                    <h4>Receipt</h4>

                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <p class="text-danger">@ViewBag.ErrorMessage</p>
                    }

                    <p>Subtotal: @Model.Subtotal.ToString("C")</p>
                    <p>Discount: -@Model.DiscountAmount.ToString("C")</p>
                    <p>Tax (8%): @Model.Tax.ToString("C")</p>
                    <h5>Total: @Model.Total.ToString("C")</h5>
                </div>
            }
        </div>
    </div>
</div>