@model IEnumerable<CH08Lab.Models.Accommodation>

@{
    ViewBag.Title = "Manage Accommodations";
}

<h3>Manage Accommodations</h3>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="AddAccommodation" method="post" class="mb-3">
    <input type="text" name="name" placeholder="Name" class="form-control d-inline-block w-25" />
    <input type="text" name="phone" placeholder="Phone" class="form-control d-inline-block w-25" />
    <input type="email" name="email" placeholder="Email" class="form-control d-inline-block w-25" />
    <button type="submit" class="btn btn-primary">Add</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.Phone</td>
                <td>@a.Email</td>
                <td>
                    <form asp-action="DeleteAccommodation" method="post">
                        <input type="hidden" name="id" value="@a.AccommodationId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>