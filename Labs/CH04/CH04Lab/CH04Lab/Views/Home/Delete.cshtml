@model CH04Lab.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
    Layout = "_Layout";
}

<div class="text-center bg-dark text-white p-3 mb-4">
    <h2>Contact Manager</h2>
</div>

<h3>Delete Contact</h3>
<h5 class="text-danger">Are you sure you want to delete this contact?</h5>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ContactId" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-dark">Delete</button>
        <a asp-action="Index" class="btn btn-dark">Cancel</a>
    </div>
</form>
