@model IEnumerable<TripLog.Models.Trip>

@{
    ViewBag.Title = "Home";
}

<p>
    <a class="btn btn-link" asp-action="AddPage1">Add Trip</a>
</p>

@if (!Model.Any())
{
    <p>No trips yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Destination</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Accommodations</th>
                <th>Things To Do</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Destination</td>
                    <td>@t.StartDate.ToString("M/d/yyyy")</td>
                    <td>@t.EndDate.ToString("M/d/yyyy")</td>
                    <td>
                        <strong>@t.Accommodation</strong><br />
                        @if (!string.IsNullOrEmpty(t.AccommodationPhone))
                        {
                            <div>Phone: @t.AccommodationPhone</div>
                        }
                        @if (!string.IsNullOrEmpty(t.AccommodationEmail))
                        {
                            <div>Email: @t.AccommodationEmail</div>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(t.Activity1))
                        {
                            <div>@t.Activity1</div>
                        }
                        @if (!string.IsNullOrWhiteSpace(t.Activity2))
                        {
                            <div>@t.Activity2</div>
                        }
                        @if (!string.IsNullOrWhiteSpace(t.Activity3))
                        {
                            <div>@t.Activity3</div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}