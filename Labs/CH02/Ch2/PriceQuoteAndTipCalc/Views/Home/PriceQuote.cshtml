@{
    ViewData["Title"] = "Price Quote";
    Layout = "_Layout";
}

<div class="text-start">
    <h1 class="display-4 text-primary">Price Quote</h1>
    <form asp-action="PriceQuote" method="post" class="container-fluid d-flex flex-column">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="d-flex justify-content-between align-items-center mb-2">
            <p class="form-label">Subtotal: </p>
            <input class="form-control w-50" type="text" name="subtotal" style=" height: 25px; " value="@Model.Subtotal">
        </div>

        <div class="d-flex justify-content-between align-items-center mb-2">
            <p class="form-label">Discount Percent: </p>
            <input class="form-control w-50" type="text" name="discountPercent" style=" height: 25px; " value="@Model.DiscountPercent">
        </div>

        <div class="d-flex justify-content-between align-items-center mb-2">
            <p class="form-label">Discount Amount: </p>
            <p class="form-label">$@Model.DiscountAmount.ToString("0.00")</p>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-2">
            <p class="form-label">Total: </p>
            <p class="form-label">$@Model.Total.ToString("0.00")</p>
        </div>

        <div class="d-flex justify-content-start gap-2 mt-3">
            <button type="submit" class="btn btn-primary">Calculate</button>
            <a href="@Url.Action("PriceQuote", "Home")" class="btn btn-secondary">Clear</a>
        </div>
    </form>
</div>